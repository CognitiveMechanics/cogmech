
@include "../lib/math.cogm"

add_s(a, b, r) -> <
  <"op1", a>,
  <"op2", b>,
  <"sum", r>
>

s0 : add_s([],  [],         [*])
  => add_s([],  s0["op1"],  s0["op2"])

s1 : add_s([*],  not0,          [])
  => add_s([],   -(s1["op2"]),  +(s1["sum"]))

s2 : add_s([*],  *0,  [])
  => add_s([],   [],  s2["sum"])

add(a, b) -> R(add_s(4, 6, []))["sum"]

: add(1, 2)